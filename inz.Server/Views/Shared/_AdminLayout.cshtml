@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css"/>
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content-wrapper {
            display: flex;
            flex-grow: 1;
        }

        .sidebar {
            width: 280px;
            flex-shrink: 0;
        }

        .content-area {
            flex-grow: 1;
        }
    </style>
</head>
<body>
<header class="navbar border-bottom px-3 shadow-sm">
    <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Panel Administratora</span>

        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right me-2"></i>Wyloguj
            </button>
        </form>
    </div>
</header>

<div class="main-content-wrapper">
    <nav class="sidebar d-flex flex-column flex-shrink-0 p-3 border-end">
        <ul class="nav nav-pills flex-column mb-auto pt-2">
            <li class="nav-item">
                <a asp-controller="UsersAdmin" asp-action="Index"
                   class="nav-link @(controller == "UsersAdmin" ? "active" : "")">
                    <i class="bi bi-person-fill-gear me-2"></i>
                    Pracownicy
                </a>
                <a asp-controller="PatientsAdmin" asp-action="Index"
                   class="nav-link @(controller == "PatientsAdmin" ? "active" : "")">
                    <i class="bi bi-people-fill me-2"></i>
                    Pacjenci
                </a>
                <a asp-controller="DocumentsAdmin" asp-action="Index"
                   class="nav-link @(controller == "DocumentsAdmin" ? "active" : "")">
                    <i class="bi bi-file-earmark-text-fill me-2"></i>
                    Dokumenty
                </a>
                <a asp-controller="RoomsAdmin" asp-action="Index"
                   class="nav-link @(controller == "RoomsAdmin" ? "active" : "")">
                    <i class="bi bi-door-open-fill me-2"></i>
                    Sale terapii
                </a>
            </li>
        </ul>
    </nav>

    <main role="main" class="content-area p-4 bg-body-tertiary">
        @RenderBody()
    </main>
</div>

<partial name="_NotificationToast"/>

<div id="modal-placeholder"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>