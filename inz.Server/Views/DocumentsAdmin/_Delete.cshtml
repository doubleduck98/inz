@model inz.Server.ViewModels.Documents.DocDeleteViewModel

<div class="modal fade" id="deleteDocModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDocumentModalLabel">Potwierdź Usunięcie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Czy na pewno chcesz usunąć dokument <strong>@Model.FileName</strong>?</p>
                <br/>
                Tej operacji nie można cofnąć.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="FileName"/>
                    
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger">Usuń</button>
                </form>
            </div>
        </div>
    </div>
</div>
