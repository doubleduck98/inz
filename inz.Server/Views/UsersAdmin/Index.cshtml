@model inz.Server.ViewModels.Users.IndexViewModel

@{
    ViewBag.Title = "Użytkownicy";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Pracownicy</h1>

    <a asp-controller="UsersAdmin" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-2"></i>Dodaj nowego pracownika
    </a>
</div>


<form asp-controller="UsersAdmin" asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" asp-for="Search" class="form-control" placeholder="Szukaj po imieniu lub nazwisku...">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Szukaj
        </button>
        <a asp-action="Index" class="btn btn-secondary" title="Wyczyść filtry"><i class="bi bi-x-lg"></i></a>
    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th style="width: 1%;" class="text-end">Akcje</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-controller="UsersAdmin" asp-action="UserDetails" asp-route-id="@user.Id"
                               class="btn btn-sm btn-outline-secondary">Szczegóły</a>
                            <a asp-controller="UsersAdmin" asp-action="Edit" asp-route-id="@user.Id"
                               asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                               class="btn btn-sm btn-outline-secondary">Edytuj</a>
                            <a href="@Url.Action("Delete", "UsersAdmin", new { id = user.Id })"
                               class="btn btn-sm btn-outline-danger" data-bs-toggle="ajax-modal"
                               data-bs-target="#deleteUserModal">Usuń</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-end">

            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-searchString="@Model.Search">Poprzednia</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@Model.Search">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-searchString="@Model.Search">Następna</a>
            </li>

        </ul>
    </nav>
}