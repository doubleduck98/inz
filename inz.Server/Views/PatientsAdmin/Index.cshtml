@model inz.Server.ViewModels.Patients.PatientIndexViewModel
@{
    ViewData["Title"] = "Zarządzanie Pacjentami";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Pacjenci</h1>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-6">
            <input asp-for="Search" class="form-control" placeholder="Szukaj po imieniu lub nazwisku...">
        </div>
        <div class="col-md-4">
            <select asp-for="SelectedUserId" asp-items="@Model.UserList" class="form-select">
                <option value="">Wszyscy pracownicy</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Filtruj</button>
                <a asp-action="Index" class="btn btn-secondary" title="Wyczyść filtry"><i class="bi bi-x-lg"></i></a>
            </div>
        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Data urodzenia</th>
                <th>Osoba koordynująca</th>
                <th class="text-end">Akcje</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>
                    <td>@patient.Name</td>
                    <td>@patient.Surname</td>
                    <td>@patient.Dob.ToShortDateString()</td>
                    <td>@(patient.CoordinatingUserName ?? "Brak")</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-outline-secondary">Szczegóły</a>
                            <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-outline-danger"
                               data-bs-toggle="ajax-modal"
                               data-bs-target="#deletePatientModal">Usuń</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-end">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchString="@Model.Search" asp-route-userId="@Model.SelectedUserId">Poprzednia</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Model.Search"
                       asp-route-userId="@Model.SelectedUserId">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchString="@Model.Search" asp-route-userId="@Model.SelectedUserId">Następna</a>
            </li>
        </ul>
    </nav>
}