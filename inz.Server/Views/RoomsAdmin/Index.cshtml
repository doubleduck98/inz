@model inz.Server.ViewModels.Rooms.RoomIndexViewModel

@{
    ViewBag.Title = "Sale terapii";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Sale terapii</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-2"></i>Dodaj nową salę
    </a>
</div>

<div class="row">
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead>
                <tr>
                    <th>Nazwa Sali</th>
                    <th class="text-end">Akcje</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var room in Model.Rooms)
                {
                    <tr>
                        <td>@room.Name</td>
                        <td class="text-end">
                            <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-outline-danger"
                               data-bs-toggle="ajax-modal" data-bs-target="#deleteRoomModal">
                                <i class="bi bi-trash3-fill"></i> Usuń
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
